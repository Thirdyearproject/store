<%- include('partials/blog-pages-header'); -%>
    <div class="container-fluid bg-side-nav">
        <div class="row">
            <div class="col-lg-2 sidebaare">
                <%- include('partials/blog-pages-sidebar'); -%>
            </div>
            <div class="col-lg-10">

                <div class="dashboard-content-area">
                    <!-- put your contente -->

                    <h1>All Pages</h1>
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Page Photo</th>
                                <th>Page Url</th>
                                <th>Nav Text</th>
                                <th>Title</th>
                                <th>Meta Description</th>
                                <th>Meta Keyword</th>
                                <th>h1</th>
                                <th>Page Details</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%x.forEach((y)=>{%>
                                <tr>
                                    <td>
                                        <%if(y.PagePhoto){ %>
                                            <img src="/backend/images/<%=y.PagePhoto%>" width="100">
                                            <%}else{%>
                                                <img src="/backend/images/no-img.png" width="70">
                                                <%}%>
                                    </td>
                                    <td>
                                        <%=y.PageUrl%>
                                    </td>
                                    <td>
                                        <%=y.PageNavText%>
                                    </td>
                                    <td>
                                        <%=y.PageTitle%>
                                    </td>
                                    <td>
                                        <%=y.PageMetaDescrition%>
                                    </td>
                                    <td>
                                        <%=y.PageMetaKeyword%>
                                    </td>
                                    <td>
                                        <%=y.PageHeading%>
                                    </td>
                                    <td>
                                        <%=y.PageDetails.slice(0, 20)%>
                                    </td>%></td>
                                    <td>
                                        <a class="btn btn-primary"
                                            href="/admin/pages/edit-pages/<%=y.PageUrl%>">Edit</a>
                                    </td>
                                    <td>
                                        <form style="display: inline;"
                                            action="/admin/pages/delete-pages/<%=y.PageUrl%>?_method=DELETE"
                                            method="POST">
                                            <button style="cursor: pointer;" type="submit"
                                                class="btn btn-danger ml-2">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <%x})%>
                        </tbody>
                    </table>


                    <center> <br> <a class="btn btn-success btn-md" href="/admin/pages/add-pages/">Add More
                            Pages</a>
                    </center>


                    <!-- end your content here -->

                    <%- include('partials/blog-pages-footer'); -%>

